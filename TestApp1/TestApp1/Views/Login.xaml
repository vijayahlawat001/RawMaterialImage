<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="TestApp1.Views.Login"  
             BackgroundImage="logo.jpg">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
                <BoxView HeightRequest="10"/>
                <Image HorizontalOptions="Center" WidthRequest="300" Source="maco.jpg"/>
                <Frame BackgroundColor="#BF043055" HasShadow="False">
                    <StackLayout Orientation="Vertical" Spacing="10">
                        <Entry x:Name = "Email" Placeholder = "Email" HeightRequest = "40" Keyboard = "Email" />
                        <Entry x:Name = "Password" Placeholder = "Password" HeightRequest="40" IsPassword = "True"/>
                    </StackLayout>
                </Frame>
                <Button x:Name= "loginbtn" Text = "Login " FontAttributes = "Bold" FontSize = "Large" HorizontalOptions = "FillAndExpand" BackgroundColor = "# 088da5" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>  